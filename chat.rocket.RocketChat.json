 {
    "app-id": "chat.rocket.RocketChat",
    "base": "io.atom.electron.BaseApp",
    "base-version": "stable",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "/app/Rocket.Chat/rocketchat-desktop",
    "separate-locales": false,
    "rename-desktop-file": "rocketchat-desktop.desktop",
    "rename-icon": "rocketchat-desktop",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--filesystem=xdg-download",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "modules": [
        {
            "name": "rocketchat-desktop",
            "buildsystem": "simple",
            "build-commands": [
                "ar x rocketchat_*.deb",
                "rm -f rocketchat_*.deb",
                "tar xf data.tar.xz",
                "rm -f control.tar.gz data.tar.xz debian-binary",
                "cp -r usr/* opt/* /app",
                "install -D rocketchat.64x64.png /app/share/icons/hicolor/64x64/apps/rocketchat-desktop.png",
                "install -D rocketchat.128x128.png /app/share/icons/hicolor/128x128/apps/rocketchat-desktop.png",
                "chmod -R a-s,go+rX,go-w /app/Rocket.Chat",
                "desktop-file-edit --set-key=Exec --set-value='/app/Rocket.Chat/rocketchat-desktop %U' /app/share/applications/rocketchat-desktop.desktop",
                "install -Dm644 chat.rocket.RocketChat.appdata.xml /app/share/appdata/chat.rocket.RocketChat.appdata.xml"
            ],
            "sources": [
                {
                    "type": "file",
                    "only-arches": ["x86_64"],
                    "url": "https://github.com/RocketChat/Rocket.Chat.Electron/releases/download/2.13.2/rocketchat_2.13.2_amd64.deb",
                    "sha256": "e8c1c16328e5f4cb3296b9ff2cc9a68e66cd022175f7fb88da3cf1c485b5929d"
                },
                {
                    "type": "file",
                    "only-arches": ["i386"],
                    "url": "https://github.com/RocketChat/Rocket.Chat.Electron/releases/download/2.13.2/rocketchat_2.13.2_i386.deb",
                    "sha256": "e699ccc2377fc6560f2b75015e60950ae1bb8ca9ece17d98f96af52839fde293"
                },
                {
                    "type": "file",
                    "url": "https://github.com/RocketChat/Rocket.Chat.Electron/archive/2.13.2.tar.gz",
                    "sha256": "4152875bffa7028c7026c7cdc537b058b9358da77983229e5d824b74e259b9df"
                },
                {
                    "type": "file",
                    "path": "chat.rocket.RocketChat.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "rocketchat.64x64.png"
                },
                {
                    "type": "file",
                    "path": "rocketchat.128x128.png"
                }
            ]
        }
    ]
}
