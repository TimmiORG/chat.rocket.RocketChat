 {
    "app-id": "chat.rocket.RocketChat",
    "base": "io.atom.electron.BaseApp",
    "base-version": "stable",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "/app/Rocket.Chat+/rocketchat",
    "separate-locales": false,
    "rename-desktop-file": "rocketchat.desktop",
    "rename-icon": "rocketchat",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--filesystem=xdg-download",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "modules": [
        {
            "name": "rocketchat-desktop",
            "buildsystem": "simple",
            "build-commands": [
                "ar x rocketchat_*.deb",
                "rm -f rocketchat_*.deb",
                "tar xf data.tar.xz",
                "rm -f control.tar.gz data.tar.xz debian-binary",
                "cp -r usr/* opt/* /app",
                "install -D rocketchat.64x64.png /app/share/icons/hicolor/64x64/apps/rocketchat.png",
                "install -D rocketchat.128x128.png /app/share/icons/hicolor/128x128/apps/rocketchat.png",
                "chmod -R a-s,go+rX,go-w /app/Rocket.Chat+",
                "desktop-file-edit --set-key=Exec --set-value='/app/Rocket.Chat+/rocketchat %U' /app/share/applications/rocketchat.desktop",
                "install -Dm644 chat.rocket.RocketChat.appdata.xml /app/share/appdata/chat.rocket.RocketChat.appdata.xml"
            ],
            "sources": [
                {
                    "type": "file",
                    "only-arches": ["x86_64"],
                    "url": "https://github.com/RocketChat/Rocket.Chat.Electron/releases/download/2.12.1/rocketchat_2.12.1_amd64.deb",
                    "sha256": "2a186ae8e1e284e669f3a8ca85f11bd8390a57d393fda0d36081e9643a9bc69a"
                },
                {
                    "type": "file",
                    "only-arches": ["i386"],
                    "url": "https://github.com/RocketChat/Rocket.Chat.Electron/releases/download/2.12.1/rocketchat_2.12.1_i386.deb",
                    "sha256": "bfec47bf6b4c9e4fdef7db6b93b14fa1f1919bfdf40abae0a67c980e0ca614f5"
                },
                {
                    "type": "file",
                    "url": "https://github.com/RocketChat/Rocket.Chat.Electron/archive/2.12.1.tar.gz",
                    "sha256": "38617bab3ad16e5a9758db743881b003bfc1a8958334b4898f1eb77f55effcb8"
                },
                {
                    "type": "file",
                    "path": "chat.rocket.RocketChat.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "rocketchat.64x64.png"
                },
                {
                    "type": "file",
                    "path": "rocketchat.128x128.png"
                }
            ]
        }
    ]
}
