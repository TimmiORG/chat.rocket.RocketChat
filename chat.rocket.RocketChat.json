 {
    "app-id": "chat.rocket.RocketChat",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "base": "io.atom.electron.BaseApp",
    "base-version": "stable",
    "sdk": "org.freedesktop.Sdk",
    "command": "/app/Rocket.Chat/rocketchat-desktop",
    "separate-locales": false,
    "rename-desktop-file": "rocketchat-desktop.desktop",
    "rename-icon": "rocketchat-desktop",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=all",
        "--filesystem=home",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "modules": [
        {
            "name": "rocketchat-desktop",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "file",
                    "path": "chat.rocket.RocketChat.appdata.xml"
                },
                {
                    "type": "file",
                    "only-arches": ["x86_64"],
                    "url": "https://github.com/RocketChat/Rocket.Chat.Electron/releases/download/2.15.2/rocketchat_2.15.2_amd64.deb",
                    "sha256": "eb180cf7c9b7f9ead2e1812ceed3aa9b6d8df6bc23d854ad62f93df638622090"
                },
                {
                    "type": "file",
                    "only-arches": ["i386"],
                    "url": "https://github.com/RocketChat/Rocket.Chat.Electron/releases/download/2.15.2/rocketchat_2.15.2_i386.deb",
                    "sha256": "a78934d59a1064bf80e4f36d0ad7dcd95cbbf5d214658bc7501363db983051d5"
                },
                {
                    "type": "file",
                    "url": "https://github.com/RocketChat/Rocket.Chat.Electron/archive/2.15.2.tar.gz",
                    "sha256": "d0fe85f226289473972b7d8cf2c97813d155b82b26bc003c123c7bbeb405fcbd"
                }
            ],
            "build-commands": [
                "ar x rocketchat_*.deb",
                "tar xf data.tar.xz -C ${FLATPAK_DEST} --strip-components=2 ./opt ./usr",
                "rm -f control.tar.gz data.tar.xz debian-binary",
                "rm -r ${FLATPAK_DEST}/share/icons/hicolor/1024x1024",
                "chmod -R a-s,go+rX,go-w ${FLATPAK_DEST}/Rocket.Chat",
                "desktop-file-edit --set-key=Exec --set-value=\"${FLATPAK_DEST}/Rocket.Chat/rocketchat-desktop %U\" ${FLATPAK_DEST}/share/applications/rocketchat-desktop.desktop",
                "install -Dm644 chat.rocket.RocketChat.appdata.xml ${FLATPAK_DEST}/share/appdata/chat.rocket.RocketChat.appdata.xml"
            ]
        }
    ]
}
