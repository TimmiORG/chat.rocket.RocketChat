 {
    "app-id": "chat.rocket.RocketChat",
    "base": "io.atom.electron.BaseApp",
    "base-version": "stable",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "/app/Rocket.Chat+/rocketchat",
    "separate-locales": false,
    "rename-desktop-file": "rocketchat.desktop",
    "rename-icon": "rocketchat",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--filesystem=xdg-download",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "modules": [
        {
            "name": "rocketchat-desktop",
            "buildsystem": "simple",
            "build-commands": [
                "ar x rocketchat_*.deb",
                "rm -f rocketchat_*.deb",
                "tar xf data.tar.xz",
                "rm -f control.tar.gz data.tar.xz debian-binary",
                "cp -r usr/* opt/* /app",
                "install -D rocketchat.64x64.png /app/share/icons/hicolor/64x64/apps/rocketchat.png",
                "install -D rocketchat.128x128.png /app/share/icons/hicolor/128x128/apps/rocketchat.png",
                "chmod -R a-s,go+rX,go-w /app/Rocket.Chat+",
                "desktop-file-edit --set-key=Exec --set-value='/app/Rocket.Chat+/rocketchat %U' /app/share/applications/rocketchat.desktop",
                "install -Dm644 chat.rocket.RocketChat.appdata.xml /app/share/appdata/chat.rocket.RocketChat.appdata.xml"
            ],
            "sources": [
                {
                    "type": "file",
                    "only-arches": ["x86_64"],
                    "url": "https://github.com/RocketChat/Rocket.Chat.Electron/releases/download/2.12.0/rocketchat_2.12.0_amd64.deb",
                    "sha256": "d54612a9f5cc2712814925102e6fdaaa09e75a4d91b4752c2bb6a557b1b47d4b"
                },
                {
                    "type": "file",
                    "only-arches": ["i386"],
                    "url": "https://github.com/RocketChat/Rocket.Chat.Electron/releases/download/2.12.0/rocketchat_2.12.0_i386.deb",
                    "sha256": "d361fce015ab8defc9340999ff8ca93063b40965f417da468187d490c206ec88"
                },
                {
                    "type": "file",
                    "url": "https://github.com/RocketChat/Rocket.Chat.Electron/archive/2.12.0.tar.gz",
                    "sha256": "d5963fcf32cc7ae6f91d2d1003a3f42f2b1cceab97ca4d6c9b1454cc33cc86e7"
                },
                {
                    "type": "file",
                    "path": "chat.rocket.RocketChat.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "rocketchat.64x64.png"
                },
                {
                    "type": "file",
                    "path": "rocketchat.128x128.png"
                }
            ]
        }
    ]
}
