 {
    "app-id": "chat.rocket.RocketChat",
    "base": "io.atom.electron.BaseApp",
    "base-version": "stable",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "/app/Rocket.Chat/rocketchat-desktop",
    "separate-locales": false,
    "rename-desktop-file": "rocketchat-desktop.desktop",
    "rename-icon": "rocketchat-desktop",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--filesystem=xdg-download",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "modules": [
        {
            "name": "rocketchat-desktop",
            "buildsystem": "simple",
            "build-commands": [
                "ar x rocketchat_*.deb",
                "rm -f rocketchat_*.deb",
                "tar xf data.tar.xz",
                "rm -f control.tar.gz data.tar.xz debian-binary",
                "cp -r usr/* opt/* /app",
                "install -D rocketchat.64x64.png /app/share/icons/hicolor/64x64/apps/rocketchat-desktop.png",
                "install -D rocketchat.128x128.png /app/share/icons/hicolor/128x128/apps/rocketchat-desktop.png",
                "chmod -R a-s,go+rX,go-w /app/Rocket.Chat",
                "desktop-file-edit --set-key=Exec --set-value='/app/Rocket.Chat/rocketchat-desktop %U' /app/share/applications/rocketchat-desktop.desktop",
                "install -Dm644 chat.rocket.RocketChat.appdata.xml /app/share/appdata/chat.rocket.RocketChat.appdata.xml"
            ],
            "sources": [
                {
                    "type": "file",
                    "only-arches": ["x86_64"],
                    "url": "https://github.com/RocketChat/Rocket.Chat.Electron/releases/download/2.13.3/rocketchat_2.13.3_amd64.deb",
                    "sha256": "6410468fa36e17b96d69f8e3d71286d87f608188efb25a633864d76945933564"
                },
                {
                    "type": "file",
                    "only-arches": ["i386"],
                    "url": "https://github.com/RocketChat/Rocket.Chat.Electron/releases/download/2.13.3/rocketchat_2.13.3_i386.deb",
                    "sha256": "56133a77472ce2db520e874e914b22cc00f5c4593d652076f4d4196e057d68a7"
                },
                {
                    "type": "file",
                    "url": "https://github.com/RocketChat/Rocket.Chat.Electron/archive/2.13.3.tar.gz",
                    "sha256": "56a97cfa6c70896043eac756b50020ce84c705d1d1dd77d583857f2e9e5a423d"
                },
                {
                    "type": "file",
                    "path": "chat.rocket.RocketChat.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "rocketchat.64x64.png"
                },
                {
                    "type": "file",
                    "path": "rocketchat.128x128.png"
                }
            ]
        }
    ]
}
