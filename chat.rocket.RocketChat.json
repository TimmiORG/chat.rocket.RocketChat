 {
    "app-id": "chat.rocket.RocketChat",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "base": "io.atom.electron.BaseApp",
    "base-version": "stable",
    "sdk": "org.freedesktop.Sdk",
    "command": "/app/Rocket.Chat/rocketchat-desktop",
    "separate-locales": false,
    "rename-desktop-file": "rocketchat-desktop.desktop",
    "rename-icon": "rocketchat-desktop",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=all",
        "--filesystem=home",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "modules": [
        {
            "name": "rocketchat-desktop",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "file",
                    "path": "chat.rocket.RocketChat.appdata.xml"
                },
                {
                    "type": "file",
                    "only-arches": ["x86_64"],
                    "url": "https://github.com/RocketChat/Rocket.Chat.Electron/releases/download/2.15.1/rocketchat_2.15.1_amd64.deb",
                    "sha256": "8a0e6ca103e8c0ed9853006b4ce40a44727ed7a07329b0fce6150c989e9e295e"
                },
                {
                    "type": "file",
                    "only-arches": ["i386"],
                    "url": "https://github.com/RocketChat/Rocket.Chat.Electron/releases/download/2.15.1/rocketchat_2.15.1_i386.deb",
                    "sha256": "eb94374ee1a40c2e5d0c1be70f308d961ff51e563a730b5b62822ff64c1b911b"
                },
                {
                    "type": "file",
                    "url": "https://github.com/RocketChat/Rocket.Chat.Electron/archive/2.15.1.tar.gz",
                    "sha256": "a9bd5abae86f3147342c0b3292faa214ddc8ce4235286eeea9856b172e68501e"
                }
            ],
            "build-commands": [
                "ar x rocketchat_*.deb",
                "tar xf data.tar.xz -C ${FLATPAK_DEST} --strip-components=2 ./opt ./usr",
                "rm -f control.tar.gz data.tar.xz debian-binary",
                "rm -r ${FLATPAK_DEST}/share/icons/hicolor/1024x1024",
                "chmod -R a-s,go+rX,go-w ${FLATPAK_DEST}/Rocket.Chat",
                "desktop-file-edit --set-key=Exec --set-value=\"${FLATPAK_DEST}/Rocket.Chat/rocketchat-desktop %U\" ${FLATPAK_DEST}/share/applications/rocketchat-desktop.desktop",
                "install -Dm644 chat.rocket.RocketChat.appdata.xml ${FLATPAK_DEST}/share/appdata/chat.rocket.RocketChat.appdata.xml"
            ]
        }
    ]
}
