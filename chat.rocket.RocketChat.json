 {
    "app-id": "chat.rocket.RocketChat",
    "base": "io.atom.electron.BaseApp",
    "base-version": "stable",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "/app/Rocket.Chat/rocketchat",
    "separate-locales": false,
    "rename-desktop-file": "rocketchat.desktop",
    "rename-icon": "rocketchat",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--filesystem=xdg-download",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "modules": [
        {
            "name": "rocketchat-desktop",
            "buildsystem": "simple",
            "build-commands": [
                "ar x rocketchat_*.deb",
                "rm -f rocketchat_*.deb",
                "tar xf data.tar.xz",
                "rm -f control.tar.gz data.tar.xz debian-binary",
                "cp -r usr/* opt/* /app",
                "install -D rocketchat.64x64.png /app/share/icons/hicolor/64x64/apps/rocketchat.png",
                "install -D rocketchat.128x128.png /app/share/icons/hicolor/128x128/apps/rocketchat.png",
                "chmod -R a-s,go+rX,go-w /app/Rocket.Chat",
                "desktop-file-edit --set-key=Exec --set-value='/app/Rocket.Chat/rocketchat %U' /app/share/applications/rocketchat.desktop",
                "install -Dm644 chat.rocket.RocketChat.appdata.xml /app/share/appdata/chat.rocket.RocketChat.appdata.xml"
            ],
            "sources": [
                {
                    "type": "file",
                    "only-arches": ["x86_64"],
                    "url": "https://github.com/RocketChat/Rocket.Chat.Electron/releases/download/2.13.1/rocketchat_2.13.1_amd64.deb",
                    "sha256": "173a3963dba99287feb024d89f9f7f23b453f0044bb188d2f792556060f6faec"
                },
                {
                    "type": "file",
                    "only-arches": ["i386"],
                    "url": "https://github.com/RocketChat/Rocket.Chat.Electron/releases/download/2.13.1/rocketchat_2.13.1_i386.deb",
                    "sha256": "00ae32c44045177ced93090888aac7f245c28963d8e231cf54c5453bb4dbd387"
                },
                {
                    "type": "file",
                    "url": "https://github.com/RocketChat/Rocket.Chat.Electron/archive/2.13.1.tar.gz",
                    "sha256": "c7a930e690edac373bfee96bf196ff81fc52c58c3b46e05689f47633afcfedc0"
                },
                {
                    "type": "file",
                    "path": "chat.rocket.RocketChat.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "rocketchat.64x64.png"
                },
                {
                    "type": "file",
                    "path": "rocketchat.128x128.png"
                }
            ]
        }
    ]
}
